# AI Services Configuration
# Copy this to .env and fill in your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Supabase Configuration (for content storage)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Market Research APIs
SENSORTOWER_API_KEY=your_sensortower_api_key_here
APPANNIE_API_KEY=your_appannie_api_key_here
APP_STORE_API_KEY=your_app_store_api_key_here
GOOGLE_PLAY_API_KEY=your_google_play_api_key_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/evergreen_match3
REDIS_URL=redis://localhost:6379

# Analytics APIs
AMPLITUDE_API_KEY=your_amplitude_api_key_here
MIXPANEL_TOKEN=your_mixpanel_token_here
SENTRY_DSN=your_sentry_dsn_here

# Cloud Services
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

GOOGLE_APPLICATION_CREDENTIALS=path_to_your_google_credentials.json
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here

# AI Content Generation Settings
AI_CONTENT_GENERATION_ENABLED=true
AI_PERSONALIZATION_ENABLED=true
AI_MARKET_RESEARCH_ENABLED=true
AI_ANALYTICS_ENABLED=true

# Content Pipeline Settings
CONTENT_GENERATION_INTERVAL=300
MAX_CONTENT_QUEUE_SIZE=1000
AUTO_GENERATE_CONTENT=true

# Personalization Settings
PERSONALIZATION_UPDATE_INTERVAL=300
CHURN_PREDICTION_ENABLED=true
DIFFICULTY_OPTIMIZATION_ENABLED=true

# Market Research Settings
MARKET_RESEARCH_UPDATE_INTERVAL=3600
COMPETITOR_ANALYSIS_ENABLED=true
TREND_ANALYSIS_ENABLED=true

# Analytics Settings
ANALYTICS_REAL_TIME_ENABLED=true
PREDICTIVE_ANALYTICS_ENABLED=true
AUTOMATED_INSIGHTS_ENABLED=true