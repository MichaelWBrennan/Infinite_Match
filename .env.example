# Game Configuration
GAME_VERSION=1.0.0
NODE_ENV=development
PORT=3000

# Unity Services
UNITY_PROJECT_ID=your-unity-project-id
UNITY_CLOUD_CODE_SECRET=your-unity-cloud-code-secret
UNITY_ANALYTICS_KEY=your-unity-analytics-key

# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
OTEL_SERVICE_NAME=match3-game-backend
OTEL_SERVICE_VERSION=1.0.0

# Amplitude Analytics
AMPLITUDE_API_KEY=your-amplitude-api-key
AMPLITUDE_SERVER_URL=https://api2.amplitude.com

# Datadog Configuration
DATADOG_APPLICATION_ID=your-datadog-application-id
DATADOG_CLIENT_TOKEN=your-datadog-client-token
DATADOG_SITE=datadoghq.com

# New Relic Configuration
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=Match3Game

# Mixpanel Configuration
MIXPANEL_TOKEN=your-mixpanel-token

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-match3-game-bucket
AWS_SES_FROM_EMAIL=noreply@yourgame.com
AWS_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:match3-game-events
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/match3-game-queue
AWS_DYNAMODB_TABLE=match3-game-players

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
GOOGLE_CLOUD_BUCKET=your-match3-game-bucket
GOOGLE_PUBSUB_TOPIC=match3-game-events
