{
  "platform": "kongregate",
  "name": "Kongregate WebGL Platform",
  "version": "1.0.0",
  "description": "Compliance profile for Kongregate WebGL deployment",
  
  "build_settings": {
    "target_platform": "WebGL",
    "scripting_backend": "IL2CPP",
    "api_compatibility_level": ".NET Standard 2.1",
    "memory_size": 256,
    "data_caching": true,
    "exception_support": "Explicitly Thrown Exceptions Only"
  },
  
  "ad_sdks": {
    "primary": "kongregate_ads",
    "fallback": "unity_ads",
    "required_apis": [
      "KongregateAPI",
      "KongregateAPI.ads",
      "KongregateAPI.payments",
      "KongregateAPI.leaderboards"
    ],
    "forbidden_apis": [
      "PokiSDK",
      "GoogleMobileAds",
      "AppLovin",
      "IronSource",
      "FBInstant"
    ],
    "ad_units": {
      "banner": "BANNER",
      "interstitial": "INTERSTITIAL",
      "rewarded": "REWARDED"
    }
  },
  
  "monetization": {
    "iap_enabled": true,
    "kongregate_payments": true,
    "virtual_currency_only": false,
    "premium_currency": "kongregate_coins",
    "free_currency": "coins",
    "max_purchase_amount": 100,
    "currency_exchange_rate": 1.0,
    "required_permissions": [
      "payments"
    ],
    "roi_optimization": {
      "aggressive_pricing": true,
      "dynamic_pricing": true,
      "price_testing": true,
      "bundle_discounts": true,
      "kongregate_specific_features": {
        "kongregate_achievements": true,
        "kongregate_leaderboards": true,
        "kongregate_chat": true,
        "kongregate_forums": true,
        "kongregate_guilds": true,
        "kongregate_friends": true,
        "kongregate_messaging": true,
        "kongregate_badges": true,
        "kongregate_stats": true,
        "kongregate_high_scores": true
      },
      "consumable_products": [
        {"id": "coins_100", "price": 0.99, "currency": "USD"},
        {"id": "coins_500", "price": 4.99, "currency": "USD"},
        {"id": "coins_1000", "price": 9.99, "currency": "USD"},
        {"id": "coins_2500", "price": 19.99, "currency": "USD"},
        {"id": "coins_5000", "price": 39.99, "currency": "USD"},
        {"id": "coins_10000", "price": 79.99, "currency": "USD"}
      ],
      "non_consumable_products": [
        {"id": "remove_ads", "price": 2.99, "currency": "USD"},
        {"id": "premium_pack", "price": 9.99, "currency": "USD"},
        {"id": "starter_pack", "price": 4.99, "currency": "USD"}
      ],
      "energy_system": true,
      "energy_refill_cost": 0.99,
      "energy_pack_sizes": [10, 25, 50, 100, 250],
      "energy_pack_costs": [0.99, 1.99, 3.99, 6.99, 14.99],
      "lives_system": true,
      "lives_refill_cost": 0.49,
      "boosters_system": true,
      "booster_prices": [0.99, 1.99, 4.99, 9.99],
      "daily_rewards": true,
      "premium_daily_rewards": true,
      "streak_bonuses": true,
      "max_streak_days": 30,
      "streak_multiplier": 3.0,
      "whale_targeting": true,
      "whale_threshold": 50.0,
      "whale_bonuses": true,
      "retention_offers": true,
      "comeback_offers": true,
      "personalized_offers": true
    }
  },
  
  "analytics": {
    "kongregate_analytics": true,
    "unity_analytics": true,
    "custom_analytics": false,
    "data_collection": "comprehensive",
    "privacy_compliant": true,
    "required_events": [
      "game_start",
      "level_complete",
      "level_fail",
      "session_end",
      "purchase",
      "achievement_unlocked",
      "leaderboard_update"
    ]
  },
  
  "performance": {
    "max_memory_usage": "256MB",
    "max_build_size": "50MB",
    "max_loading_time": "10s",
    "max_initial_download": "20MB",
    "texture_compression": "DXT1",
    "audio_compression": "Vorbis",
    "mesh_compression": "Off"
  },
  
  "content_restrictions": {
    "violence_level": "minimal",
    "language_restrictions": "family_friendly",
    "gambling_elements": false,
    "loot_boxes": false,
    "real_money_gambling": false,
    "age_rating": "E",
    "content_descriptors": []
  },
  
  "technical_requirements": {
    "webgl_version": "2.0",
    "browser_support": ["Chrome", "Firefox", "Safari", "Edge"],
    "mobile_web_support": true,
    "touch_controls": true,
    "keyboard_controls": true,
    "fullscreen_support": true,
    "local_storage": true,
    "cookies": false
  },
  
  "kongregate_specific": {
    "game_id": "your_kongregate_game_id_here",
    "api_key": "your_kongregate_api_key_here",
    "environment": "production",
    "debug_mode": false,
    "ad_frequency": "balanced",
    "social_features": true,
    "leaderboards": true,
    "achievements": true,
    "chat": true,
    "forums": true,
    "guilds": true,
    "friends": true,
    "messaging": true,
    "badges": true,
    "stats": true,
    "high_scores": true
  },
  
  "compliance_checks": {
    "file_size_check": true,
    "memory_usage_check": true,
    "loading_time_check": true,
    "ad_integration_check": true,
    "content_policy_check": true,
    "performance_check": true,
    "kongregate_policy_check": true,
    "webgl_compatibility_check": true
  },
  
  "build_defines": [
    "UNITY_WEBGL",
    "KONGREGATE_PLATFORM",
    "WEBGL_BUILD",
    "KONGREGATE_ADS",
    "KONGREGATE_PAYMENTS"
  ],
  
  "excluded_platforms": [
    "UNITY_ANDROID",
    "UNITY_IOS",
    "UNITY_STANDALONE"
  ]
}