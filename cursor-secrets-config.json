{
  "name": "Unity Cloud Services Configuration",
  "description": "Configuration file for accessing Unity Cloud secrets through Cursor's secret management system",
  "version": "1.0.0",
  "cursorIntegration": {
    "enabled": true,
    "secretProvider": "cursor.getSecret",
    "fallbackToEnv": true,
    "autoRefresh": true
  },
  "secrets": {
    "unity": {
      "projectId": {
        "cursorKey": "UNITY_PROJECT_ID",
        "envKey": "UNITY_PROJECT_ID",
        "description": "Unity Cloud Project ID",
        "required": true,
        "default": "0dd5a03e-7f23-49c4-964e-7919c48c0574"
      },
      "environmentId": {
        "cursorKey": "UNITY_ENV_ID", 
        "envKey": "UNITY_ENV_ID",
        "description": "Unity Cloud Environment ID",
        "required": true,
        "default": "1d8c470b-d8d2-4a72-88f6-c2a46d9e8a6d"
      },
      "clientId": {
        "cursorKey": "UNITY_CLIENT_ID",
        "envKey": "UNITY_CLIENT_ID", 
        "description": "Unity Cloud API Client ID",
        "required": true
      },
      "clientSecret": {
        "cursorKey": "UNITY_CLIENT_SECRET",
        "envKey": "UNITY_CLIENT_SECRET",
        "description": "Unity Cloud API Client Secret",
        "required": true
      },
      "apiToken": {
        "cursorKey": "UNITY_API_TOKEN",
        "envKey": "UNITY_API_TOKEN",
        "description": "Unity Cloud API Token (optional)",
        "required": false
      },
      "email": {
        "cursorKey": "UNITY_EMAIL",
        "envKey": "UNITY_EMAIL",
        "description": "Unity Account Email (for CLI)",
        "required": false
      },
      "password": {
        "cursorKey": "UNITY_PASSWORD", 
        "envKey": "UNITY_PASSWORD",
        "description": "Unity Account Password (for CLI)",
        "required": false
      },
      "orgId": {
        "cursorKey": "UNITY_ORG_ID",
        "envKey": "UNITY_ORG_ID",
        "description": "Unity Organization ID",
        "required": false
      }
    },
    "github": {
      "token": {
        "cursorKey": "GITHUB_TOKEN",
        "envKey": "GITHUB_TOKEN",
        "description": "GitHub Personal Access Token",
        "required": false
      }
    },
    "deployment": {
      "environment": {
        "cursorKey": "DEPLOYMENT_ENVIRONMENT",
        "envKey": "DEPLOYMENT_ENVIRONMENT",
        "description": "Target deployment environment",
        "required": false,
        "default": "staging"
      }
    }
  },
  "apiEndpoints": {
    "unityCloud": {
      "baseUrl": "https://services.api.unity.com",
      "authEndpoint": "/oauth/token",
      "economyEndpoint": "/economy/v1/projects/{projectId}/environments/{environmentId}",
      "scope": "economy inventory cloudcode remoteconfig"
    }
  },
  "logging": {
    "level": "info",
    "includeSecrets": false,
    "maskSecrets": true
  },
  "validation": {
    "requiredSecrets": [
      "UNITY_PROJECT_ID",
      "UNITY_ENV_ID", 
      "UNITY_CLIENT_ID",
      "UNITY_CLIENT_SECRET"
    ],
    "validateOnLoad": true,
    "strictMode": false
  }
}