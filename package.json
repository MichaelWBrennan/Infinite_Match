{
  "name": "evergreen-match3-unity",
  "version": "1.0.0",
  "description": "Evergreen Match-3 Unity Game with comprehensive automation and CI/CD",
  "type": "module",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "test": "jest",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json}\"",
    "build": "echo 'No build step required for Node.js'",
    "health": "node scripts/health-check.js",
    "economy:deploy": "node scripts/economy-deploy.js",
    "unity:deploy": "node scripts/unity-deploy.js",
    "automation": "node scripts/automation.js",
    "dashboard": "node scripts/deployment-dashboard.js",
    "monitor": "node scripts/health-monitor.js",
    "status": "node scripts/status-check.js",
    "deploy:all": "npm run health && npm run economy:deploy && npm run unity:deploy && npm run automation",
    "full-status": "npm run status && npm run dashboard && npm run monitor"
  },
  "keywords": [
    "unity",
    "match3",
    "mobile-game",
    "automation",
    "ci-cd",
    "nodejs",
    "express"
  ],
  "author": "Your Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "hpp": "^0.2.3",
    "express-mongo-sanitize": "^2.2.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.14",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-formatter-compact": "^8.40.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  },
  "workspaces": [
    "src",
    "scripts"
  ]
}