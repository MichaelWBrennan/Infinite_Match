    "unity:deploy-cloud-code": "node scripts/unity/deploy-cloud-code.js",
    "unity:deploy-economy": "python3 scripts/unity/deploy-economy-with-credentials.py",
    "unity:deploy-all": "./unity-cli-working deploy-all"
  },
  "type": "module",
  "version": "1.0.0",
  "workspaces": [
    "scripts"
  ]
