{
  "breakpoints": {
    "mobile_portrait": {
      "resolution": [
        720,
        1280
      ],
      "scale_factor": 0.8,
      "font_scale": 0.9,
      "spacing_scale": 0.8
    },
    "mobile_landscape": {
      "resolution": [
        1280,
        720
      ],
      "scale_factor": 0.9,
      "font_scale": 1.0,
      "spacing_scale": 0.9
    },
    "tablet_portrait": {
      "resolution": [
        768,
        1024
      ],
      "scale_factor": 1.0,
      "font_scale": 1.1,
      "spacing_scale": 1.0
    },
    "tablet_landscape": {
      "resolution": [
        1024,
        768
      ],
      "scale_factor": 1.1,
      "font_scale": 1.2,
      "spacing_scale": 1.1
    },
    "desktop": {
      "resolution": [
        1920,
        1080
      ],
      "scale_factor": 1.2,
      "font_scale": 1.3,
      "spacing_scale": 1.2
    }
  },
  "adaptive_ui": {
    "enable_adaptive_ui": true,
    "enable_dynamic_scaling": true,
    "enable_content_fitting": true,
    "enable_safe_area": true
  }
}