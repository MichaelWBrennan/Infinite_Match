{
  "platform": "epic",
  "name": "Epic Games Store Platform",
  "version": "1.0.0",
  "description": "Compliance profile for Epic Games Store deployment",
  
  "build_settings": {
    "target_platform": "StandaloneWindows",
    "scripting_backend": "IL2CPP",
    "api_compatibility_level": ".NET Standard 2.1",
    "architecture": "x64",
    "min_windows_version": "10",
    "target_windows_version": "11"
  },
  
  "ad_sdks": {
    "primary": "unity_ads",
    "fallback": "epic_ads",
    "required_apis": [
      "UnityEngine.Advertisements",
      "Epic.OnlineServices"
    ],
    "forbidden_apis": [
      "PokiSDK",
      "GoogleMobileAds",
      "AppLovin",
      "IronSource",
      "FBInstant",
      "Steamworks.NET"
    ],
    "ad_units": {
      "banner": "Banner_PC",
      "interstitial": "Interstitial_PC",
      "rewarded": "Rewarded_PC"
    }
  },
  
  "monetization": {
    "iap_enabled": true,
    "epic_online_services": true,
    "epic_achievements": true,
    "epic_leaderboards": true,
    "premium_currency": "epic_wallet",
    "free_currency": "coins",
    "max_purchase_amount": 200,
    "currency_exchange_rate": 1.0,
    "required_permissions": [
      "EpicOnlineServices"
    ],
    "roi_optimization": {
      "aggressive_pricing": true,
      "dynamic_pricing": true,
      "price_testing": true,
      "bundle_discounts": true,
      "epic_specific_features": {
        "epic_achievements": true,
        "epic_leaderboards": true,
        "epic_friends": true,
        "epic_presence": true,
        "epic_sessions": true,
        "epic_lobbies": true,
        "epic_voice": true,
        "epic_anti_cheat": true,
        "epic_cloud_saves": true,
        "epic_cross_platform": true
      },
      "consumable_products": [
        {"id": "coins_100", "price": 0.99, "currency": "USD"},
        {"id": "coins_500", "price": 4.99, "currency": "USD"},
        {"id": "coins_1000", "price": 9.99, "currency": "USD"},
        {"id": "coins_2500", "price": 19.99, "currency": "USD"},
        {"id": "coins_5000", "price": 39.99, "currency": "USD"},
        {"id": "coins_10000", "price": 79.99, "currency": "USD"}
      ],
      "dlc_products": [
        {"id": "expansion_pack_1", "price": 14.99, "currency": "USD"},
        {"id": "expansion_pack_2", "price": 19.99, "currency": "USD"},
        {"id": "cosmetic_pack", "price": 4.99, "currency": "USD"},
        {"id": "soundtrack", "price": 9.99, "currency": "USD"}
      ],
      "energy_system": true,
      "energy_refill_cost": 0.99,
      "energy_pack_sizes": [10, 25, 50, 100, 250],
      "energy_pack_costs": [0.99, 1.99, 3.99, 6.99, 14.99],
      "lives_system": true,
      "lives_refill_cost": 0.49,
      "boosters_system": true,
      "booster_prices": [0.99, 1.99, 4.99, 9.99],
      "daily_rewards": true,
      "premium_daily_rewards": true,
      "streak_bonuses": true,
      "max_streak_days": 30,
      "streak_multiplier": 3.0,
      "whale_targeting": true,
      "whale_threshold": 100.0,
      "whale_bonuses": true,
      "retention_offers": true,
      "comeback_offers": true,
      "personalized_offers": true
    }
  },
  
  "analytics": {
    "epic_analytics": true,
    "unity_analytics": true,
    "custom_analytics": true,
    "data_collection": "comprehensive",
    "privacy_compliant": true,
    "required_events": [
      "game_start",
      "level_complete",
      "level_fail",
      "session_end",
      "purchase",
      "achievement_unlocked",
      "friend_invite"
    ]
  },
  
  "performance": {
    "max_memory_usage": "8GB",
    "max_build_size": "10GB",
    "max_loading_time": "30s",
    "max_initial_download": "2GB",
    "texture_compression": "BC7",
    "audio_compression": "Vorbis",
    "mesh_compression": "High"
  },
  
  "content_restrictions": {
    "violence_level": "moderate",
    "language_restrictions": "teen_appropriate",
    "gambling_elements": true,
    "loot_boxes": true,
    "real_money_gambling": false,
    "age_rating": "T",
    "content_descriptors": [
      "Simulated Gambling",
      "In-App Purchases"
    ]
  },
  
  "technical_requirements": {
    "windows_version": "10+",
    "directx_version": "11",
    "opengl_version": "4.5",
    "vulkan_support": true,
    "hardware_features": ["keyboard", "mouse", "gamepad"],
    "network_requirements": ["internet", "epic_connection"]
  },
  
  "epic_specific": {
    "product_id": "your_epic_product_id_here",
    "sandbox_id": "your_sandbox_id_here",
    "deployment_id": "your_deployment_id_here",
    "environment": "production",
    "debug_mode": false,
    "epic_online_services": true,
    "epic_achievements": true,
    "epic_leaderboards": true,
    "epic_friends": true,
    "epic_presence": true,
    "epic_sessions": true,
    "epic_lobbies": true,
    "epic_voice": true,
    "epic_anti_cheat": true,
    "epic_cloud_saves": true,
    "epic_cross_platform": true
  },
  
  "compliance_checks": {
    "file_size_check": true,
    "memory_usage_check": true,
    "loading_time_check": true,
    "ad_integration_check": true,
    "content_policy_check": true,
    "performance_check": true,
    "epic_policy_check": true,
    "online_services_check": true
  },
  
  "build_defines": [
    "UNITY_STANDALONE_WIN",
    "EPIC_PLATFORM",
    "PC_BUILD",
    "EPIC_ONLINE_SERVICES",
    "EPIC_ACHIEVEMENTS"
  ],
  
  "excluded_platforms": [
    "UNITY_WEBGL",
    "UNITY_ANDROID",
    "UNITY_IOS"
  ]
}