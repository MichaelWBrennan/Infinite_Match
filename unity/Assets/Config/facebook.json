    "app_id": "your_app_id_here",
    "app_secret": "your_app_secret_here",
    "environment": "production",
    "debug_mode": false,
    "ad_frequency": "balanced",
    "social_features": true,
    "leaderboards": true,
    "achievements": true,
    "invites": true,
    "sharing": true,
    "context_switching": true,
    "facebook_sdk_version": "2.0.0",
    "facebook_analytics_version": "1.5.0",
    "facebook_ads_version": "1.8.0",
    "facebook_payments_version": "1.2.0",
    "facebook_social_version": "1.3.0",
    "facebook_leaderboards_version": "1.1.0",
    "facebook_achievements_version": "1.0.0",
    "facebook_analytics_events": [
      "game_start",
      "level_complete",
      "level_fail",
      "session_end",
      "ad_impression",
      "ad_click",
      "purchase",
      "achievement_unlocked",
      "leaderboard_update",
      "invite_sent",
      "share_game",
      "context_switch"
    ],
    "facebook_compliance": {
      "gdpr_compliant": true,
      "ccpa_compliant": true,
      "coppa_compliant": true,
      "privacy_policy_required": true,
      "cookie_consent_required": true,
      "data_retention_days": 365,
      "facebook_policy_compliant": true,
      "instant_games_policy_compliant": true
    }
  },
  
  "compliance_checks": {
    "file_size_check": true,
    "memory_usage_check": true,
    "loading_time_check": true,
    "ad_integration_check": true,
    "content_policy_check": true,
    "performance_check": true,
    "facebook_policy_check": true,
    "instant_games_policy_check": true
  },
  
  "build_defines": [
    "UNITY_WEBGL",
    "FACEBOOK_PLATFORM",
    "WEBGL_BUILD",
    "FACEBOOK_INSTANT_GAMES",
    "FACEBOOK_ADS"
  ],
  
  "excluded_platforms": [
