{
  "platform": "facebook",
  "name": "Facebook Instant Games Platform",
  "version": "2.1.0",
  "description": "Updated compliance profile for Facebook Instant Games deployment with latest standards",
  "last_updated": "2024-12-19T00:00:00Z",
  
  "build_settings": {
    "target_platform": "WebGL",
    "scripting_backend": "IL2CPP",
    "api_compatibility_level": ".NET Standard 2.1",
    "compression_format": "Brotli",
    "memory_size": 512,
    "data_caching": true,
    "exception_support": "Explicitly Thrown Exceptions Only",
    "webgl_template": "Default",
    "webgl_compression_format": "Brotli",
    "webgl_memory_size": 512,
    "webgl_data_caching": true,
    "webgl_exception_support": "Explicitly Thrown Exceptions Only",
    "webgl_name_files_as_hash": true,
    "webgl_debug_symbols": false,
    "webgl_emscripten_args": "--memory-init-file 0 --preload-file StreamingAssets@StreamingAssets"
  },
  
  "ad_sdks": {
    "primary": "facebook_ads",
    "fallback": "unity_ads",
    "required_apis": [
      "FBInstant",
      "FBInstant.ads",
      "FBInstant.payments",
      "FBInstant.player"
    ],
    "forbidden_apis": [
      "PokiSDK",
      "GoogleMobileAds",
      "AppLovin",
      "IronSource"
    ],
    "ad_units": {
      "interstitial": "VIDEO",
      "rewarded": "REWARDED_VIDEO"
    }
  },
  
  "monetization": {
    "iap_enabled": true,
    "facebook_payments": true,
    "virtual_currency_only": false,
    "premium_currency": "gems",
    "free_currency": "coins",
    "max_purchase_amount": 100,
    "currency_exchange_rate": 1.0,
    "required_permissions": [
      "payments"
    ],
    "roi_optimization": {
      "aggressive_pricing": true,
      "dynamic_pricing": true,
      "price_testing": true,
      "bundle_discounts": true,
      "facebook_specific_pricing": true,
      "consumable_products": [
        {"id": "coins_100", "price": 0.99, "currency": "USD"},
        {"id": "coins_500", "price": 4.99, "currency": "USD"},
        {"id": "coins_1000", "price": 9.99, "currency": "USD"},
        {"id": "coins_2500", "price": 19.99, "currency": "USD"},
        {"id": "coins_5000", "price": 39.99, "currency": "USD"},
        {"id": "coins_10000", "price": 79.99, "currency": "USD"}
      ],
      "non_consumable_products": [
        {"id": "remove_ads", "price": 2.99, "currency": "USD"},
        {"id": "premium_pack", "price": 9.99, "currency": "USD"},
        {"id": "starter_pack", "price": 4.99, "currency": "USD"}
      ],
      "energy_system": true,
      "energy_refill_cost": 0.99,
      "energy_pack_sizes": [10, 25, 50, 100, 250],
      "energy_pack_costs": [0.99, 1.99, 3.99, 6.99, 14.99],
      "lives_system": true,
      "lives_refill_cost": 0.49,
      "boosters_system": true,
      "booster_prices": [0.99, 1.99, 4.99, 9.99],
      "daily_rewards": true,
      "premium_daily_rewards": true,
      "streak_bonuses": true,
      "max_streak_days": 30,
      "streak_multiplier": 3.0,
      "whale_targeting": true,
      "whale_threshold": 50.0,
      "whale_bonuses": true,
      "retention_offers": true,
      "comeback_offers": true,
      "personalized_offers": true,
      "facebook_social_monetization": {
        "social_sharing_bonuses": true,
        "friend_invite_rewards": true,
        "leaderboard_rewards": true,
        "social_challenges": true,
        "viral_mechanics": true
      }
    }
  },
  
  "analytics": {
    "facebook_analytics": true,
    "unity_analytics": true,
    "custom_analytics": false,
    "data_collection": "comprehensive",
    "privacy_compliant": true,
    "required_events": [
      "game_start",
      "level_complete",
      "level_fail",
      "session_end",
      "purchase",
      "ad_impression"
    ]
  },
  
  "performance": {
    "max_memory_usage": "512MB",
    "max_build_size": "100MB",
    "max_loading_time": "8s",
    "max_initial_download": "30MB",
    "texture_compression": "ASTC",
    "audio_compression": "Vorbis",
    "mesh_compression": "High",
    "webgl_optimization": {
      "enable_webgl_2": true,
      "enable_webgl_1_fallback": true,
      "enable_webgl_worker": true,
      "enable_webgl_shared_array_buffer": true,
      "enable_webgl_offscreen_canvas": true,
      "enable_webgl_webxr": false,
      "enable_webgl_webgpu": false
    }
  },
  
  "content_restrictions": {
    "violence_level": "minimal",
    "language_restrictions": "family_friendly",
    "gambling_elements": false,
    "loot_boxes": false,
    "real_money_gambling": false,
    "age_rating": "E",
    "content_descriptors": []
  },
  
  "technical_requirements": {
    "webgl_version": "2.0",
    "browser_support": ["Chrome", "Firefox", "Safari", "Edge"],
    "mobile_web_support": true,
    "touch_controls": true,
    "keyboard_controls": true,
    "fullscreen_support": true,
    "local_storage": true,
    "cookies": false
  },
  
