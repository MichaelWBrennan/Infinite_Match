    "profile_validation": true,
    "profile_caching": true,
    "fallback_profile": "poki"
  },
  "build_commands": {
    "unity_editor": {
      "headless_webgl": "Unity -batchmode -quit -projectPath /workspace/unity -executeMethod Evergreen.Editor.HeadlessWebGLBuilder.BuildWebGLHeadless -platform {platform} -buildPath {buildPath}",
      "poki_webgl": "Unity -batchmode -quit -projectPath /workspace/unity -executeMethod Evergreen.Editor.PokiWebGLBuildScript.BuildPokiWebGL",
      "general_webgl": "Unity -batchmode -quit -projectPath /workspace/unity -executeMethod Evergreen.Editor.BuildScript.BuildWebGL"
    },
    "docker_build": {
      "webgl": "./build-webgl-docker.sh {platform} {buildPath}",
      "poki": "./build-webgl-docker.sh poki /workspace/Builds/WebGL/poki"
    },
    "local_build": {
      "webgl": "./build-webgl.sh {platform} {buildPath}",
      "poki": "./build-webgl.sh poki /workspace/Builds/WebGL/poki"
    },
    "cloud_build": {
      "webgl": "./unity-cli-working build webgl",
      "android": "./unity-cli-working build android",
      "ios": "./unity-cli-working build ios"
    }
  },
